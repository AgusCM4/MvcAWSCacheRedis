@model IEnumerable<MvcAWSCacheRedis.Models.Producto>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<h2>@TempData["MENSAJE"]</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdProducto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Precio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Imagen)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdProducto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Precio)
            </td>
            <td>
                <img src="@item.Imagen" style="height:200px;width:200px" />
            </td>
            <td>
                <a class="btn btn-primary" asp-controller="Productos" asp-action="Details" asp-route-id="@item.IdProducto">Details</a>
                <a class="btn btn-warning" asp-controller="Productos" asp-action="SeleccionarFavorito" asp-route-id="@item.IdProducto">Seleccionar Favorito</a>
            </td>
        </tr>
}
    </tbody>
</table>
